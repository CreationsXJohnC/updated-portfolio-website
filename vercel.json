{
  "version": 2,
  "installCommand": "npm install && cd integrated-portfolio/client && npm install",
  "buildCommand": "cd integrated-portfolio/client && npx vite build",
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/about", "destination": "/index.html" },
    { "source": "/projects", "destination": "/index.html" },
    { "source": "/projects/:id", "destination": "/index.html" },
    { "source": "/contact", "destination": "/index.html" }
  ],
  "functions": {
    "api/graphql.js": { "maxDuration": 30, "memory": 1024 },
    "api/health.js": { "maxDuration": 10, "memory": 512 },
    "api/test.js": { "maxDuration": 10, "memory": 512 },
    "api/contact.js": { "maxDuration": 15, "memory": 512 }
  }
}