{
  "version": 2,
  "builds": [
    {
      "src": "integrated-portfolio/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "integrated-portfolio/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/integrated-portfolio/server/index.js"
    },
    {
      "src": "/graphql",
      "dest": "/integrated-portfolio/server/index.js"
    },
    {
      "src": "/health",
      "dest": "/integrated-portfolio/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/integrated-portfolio/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "integrated-portfolio/server/index.js": {
      "maxDuration": 30
    }
  },
  "installCommand": "cd integrated-portfolio && npm run install:all",
  "buildCommand": "cd integrated-portfolio && npm run build"
}