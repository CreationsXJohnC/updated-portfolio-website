{
  "version": 2,
  "builds": [
    {
      "src": "integrated-portfolio/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "integrated-portfolio/client/dist",
        "installCommand": "npm ci",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/graphql", "destination": "/api/graphql" },
    { "source": "/health", "destination": "/api/health" },
    { "source": "/api/contact", "destination": "/api/contact" },
    { "source": "/projects", "destination": "/index.html" },
    { "source": "/projects/:id", "destination": "/index.html" },
    { "source": "/about", "destination": "/index.html" },
    { "source": "/contact", "destination": "/index.html" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/graphql.js": { "maxDuration": 30, "memory": 1024 },
    "api/health.js": { "maxDuration": 10, "memory": 512 },
    "api/test.js": { "maxDuration": 10, "memory": 512 },
    "api/contact.js": { "maxDuration": 15, "memory": 512 }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}