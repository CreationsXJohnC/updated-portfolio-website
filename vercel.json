{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/graphql"
    },
    {
      "source": "/graphql",
      "destination": "/api/graphql"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],
  "functions": {
    "api/graphql.js": {
      "maxDuration": 30
    },
    "api/health.js": {
      "maxDuration": 10
    }
  },
  "installCommand": "cd integrated-portfolio && npm run install:all",
  "buildCommand": "cd integrated-portfolio && npm run build",
  "outputDirectory": "integrated-portfolio/client/dist"
}