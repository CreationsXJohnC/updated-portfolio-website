# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USER=your_username
DB_PASSWORD=your_password

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Email Configuration (Nodemailer) - REQUIRED FOR CONTACT FORM
# Use your Gmail address that will send the emails
EMAIL_USER=johnccreations21@gmail.com
# Use Gmail App Password (NOT your regular Gmail password)
# To get App Password: Gmail Settings > Security > 2-Step Verification > App passwords
EMAIL_PASS=your_gmail_app_password_here

# Email Configuration (EmailJS - Legacy, not currently used)
EMAIL_SERVICE_ID=your_service_id
EMAIL_TEMPLATE_ID=your_template_id
EMAIL_PUBLIC_KEY=your_public_key

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# YouTube Integration
# Set your YouTube Data API v3 key to enable playlists and richer metadata.
# Without this, uploads will display via RSS but playlists will be disabled.
YOUTUBE_API_KEY=
# Default channel handle used for integration (include @ prefix)
YOUTUBE_CHANNEL_HANDLE=@Creations_X
 # Optional: hard-lock the channel to a specific ID (recommended)
 # If set, the server will use this ID directly and skip resolution.
 # Example: UCxxxxxxxxxxxxxxxxxxxxxx
 YOUTUBE_CHANNEL_ID=
 # Strict resolution: avoid ambiguous search fallback (recommended: true)
 # When true, server resolves via canonical handle page only and won't use search.
 YOUTUBE_STRICT_RESOLUTION=true