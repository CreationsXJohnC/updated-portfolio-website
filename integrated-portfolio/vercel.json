{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "installCommand": "npm run install:all",
  "buildCommand": "npm run vercel-build",
  "rewrites": [
    { "source": "/(?!api)(?:[^/]+/)*[^.]+", "destination": "/index.html" }
  ],
  "functions": {
    "api/graphql.js": { "maxDuration": 30, "memory": 1024 },
    "api/health.js": { "maxDuration": 10, "memory": 512 },
    "api/test.js": { "maxDuration": 10, "memory": 512 },
    "api/contact.js": { "maxDuration": 15, "memory": 512 }
  }
}