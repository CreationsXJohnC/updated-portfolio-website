{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/youtube.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/graphql", "dest": "/api/index.js" },
    { "src": "/api/youtube/uploads", "dest": "/api/youtube.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
