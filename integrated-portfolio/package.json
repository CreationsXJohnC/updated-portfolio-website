{
  "name": "integrated-portfolio",
  "version": "1.0.0",
  "description": "Modern portfolio website with Vue.js frontend and Apollo GraphQL backend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && ./node_modules/.bin/vite build",
    "build:client": "cd client && ./node_modules/.bin/vite build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install --include=dev",
    "vercel-build": "cd client && ( [ -x ./node_modules/.bin/vite ] || npm install --include=dev ) && ./node_modules/.bin/vite build"
  },
  "keywords": [
    "portfolio",
    "vue",
    "graphql",
    "apollo",
    "postgresql"
  ],
  "author": "Creations Studio",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "express": "^5.1.0",
    "nodemailer": "^7.0.6"
  }
}
